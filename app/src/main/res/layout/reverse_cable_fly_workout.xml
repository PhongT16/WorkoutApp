<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reverseCableFlyTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        android:text="Reverse Cable Fly" />

    <view
        android:id="@+id/youtubePlayer"
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reverseCableFlyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Adjust the pulleys to the appropriate height and adjust the weight.
                The pulleys should be above your head. 2.	Grab the left pulley with your right hand
                and the right pulley with your left hand, crossing them in front of you. This will be
                your starting position. 3.	Initiate the movement by moving your arms back and outward,
                keeping your arms straight as you execute the movement. 4.	Pause at the end of the motion
                before returning the handles to the start position." />
        </LinearLayout>
    </ScrollView>
</LinearLayout>