<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dumbbellShoulderPressTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        android:text="Dumbbell Shoulder Press" />

    <view
        android:id="@+id/youtubePlayer"
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dumbbellShoulderTagDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hold the dumbbells by your shoulders with your palms facing forwards and your elbows out to the sides and bent at a 90Â° angle. Without leaning back, extend through your elbows to press the weights above your head. Then slowly return to the starting position." />
        </LinearLayout>
    </ScrollView>
</LinearLayout>